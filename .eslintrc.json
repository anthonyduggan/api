{
    "extends": ["eslint:recommended"],
    "env": {
        "es6": true,
        "es2017": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "arrow-parens": ["error", "always"],
        "camelcase": ["error", {"properties": "always"}],
        "curly": ["error", "all"],
        "eqeqeq": ["error", "always"],
        "indent": ["error", 4],
        "no-confusing-arrow": ["error", {"allowParens": false}],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
